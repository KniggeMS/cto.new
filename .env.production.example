# Production environment variables template for InFocus
# Copy this file to .env.production and fill in the values

# Database connection string for PostgreSQL (managed service)
DATABASE_URL="postgresql://user:password@host:port/infocus"

# Node environment
NODE_ENV="production"

# JWT secrets for authentication (GENERATE NEW VALUES WITH: openssl rand -hex 32)
JWT_ACCESS_SECRET="<generate-with-openssl-rand-hex-32>"
JWT_REFRESH_SECRET="<generate-with-openssl-rand-hex-32>"

# API configuration
PORT=3000

# TMDB API key
TMDB_API_KEY="your-tmdb-api-key-here"

# CORS origin for frontend (restrict to your domain)
CORS_ORIGIN="https://yourdomain.com"

# Log level (error, warn, info, debug)
LOG_LEVEL="info"
