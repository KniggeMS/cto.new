{
  "name": "infocus",
  "version": "1.0.0",
  "private": true,
  "description": "InFocus - Collaborative media tracking and recommendation platform",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
