# Database connection string for PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/infocus"

# Node environment
NODE_ENV="development"

# JWT secrets for authentication (replace with secure random strings in production)
JWT_ACCESS_SECRET="your-jwt-access-secret-key"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-key"

# API configuration
PORT=3000

# CORS origin(s) for frontend (comma-separated for multiple origins, unset for permissive local dev)
CORS_ORIGIN="http://localhost:3000, http://localhost:3001"

# TMDB API (for fetching movie/TV data)
TMDB_API_KEY="your-tmdb-api-key-here"
