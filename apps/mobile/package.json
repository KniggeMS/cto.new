{
  "name": "@infocus/mobile",
  "version": "1.0.0",
  "private": true,
  "description": "InFocus mobile application (React Native)",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "dev": "expo start",
    "build": "echo 'Mobile app build skipped - placeholder only' || true",
    "clean": "rm -rf dist android/app/build ios/build .expo",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:e2e:build:ios": "detox build --configuration ios.sim.debug",
    "test:e2e:test:ios": "detox test --configuration ios.sim.debug",
    "test:e2e:build:android": "detox build --configuration android.emu.debug",
    "test:e2e:test:android": "detox test --configuration android.emu.debug"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.4",
    "@hookform/resolvers": "^3.3.4",
    "@infocus/shared": "workspace:*",
    "@react-native-async-storage/async-storage": "1.21.0",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/core": "^6.4.10",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "axios": "^1.6.2",
    "expo": "~50.0.0",
    "expo-constants": "~15.4.0",
    "expo-dev-client": "~3.3.0",
    "expo-document-picker": "~11.9.0",
    "expo-file-system": "~16.0.0",
    "expo-font": "~11.10.0",
    "expo-linking": "~6.2.0",
    "expo-modules-core": "~1.12.0",
    "expo-secure-store": "~12.8.0",
    "expo-sharing": "~14.0.0",
    "expo-splash-screen": "~0.26.0",
    "expo-status-bar": "~1.11.0",
    "expo-system-ui": "~2.9.0",
    "native-base": "^3.2.1",
    "react": "18.2.0",
    "react-hook-form": "^7.50.0",
    "react-native": "0.73.11",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-svg": "14.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@infocus/eslint-config": "workspace:*",
    "@infocus/jest-config": "workspace:*",
    "@infocus/prettier-config": "workspace:*",
    "@infocus/tsconfig": "workspace:*",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.1",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.46",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-preset-expo": "~10.0.0",
    "detox": "^20.14.8",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-expo": "~50.0.0",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.3.3"
  }
}
