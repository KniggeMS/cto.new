{
  "name": "@infocus/mobile",
  "version": "1.0.0",
  "private": true,
  "description": "InFocus mobile application (React Native)",
  "scripts": {
    "dev": "echo 'Mobile app dev server (to be implemented)'",
    "build": "echo 'Building mobile app...' && mkdir -p dist && echo 'mobile build placeholder' > dist/index.js",
    "clean": "rm -rf dist android/app/build ios/build",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "jest --config jest.config.cjs",
    "test:e2e": "detox test --configuration ios.sim.debug",
    "test:e2e:android": "detox test --configuration android.emu.debug",
    "build:e2e:ios": "detox build --configuration ios.sim.debug",
    "build:e2e:android": "detox build --configuration android.emu.debug"
  },
  "dependencies": {
    "@infocus/shared": "workspace:*",
    "@hookform/resolvers": "^3.3.4",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "axios": "^1.6.5",
    "expo-secure-store": "^12.8.1",
    "react": "18.2.0",
    "react-hook-form": "^7.49.3",
    "react-native": "0.73.11",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-screens": "^3.29.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@infocus/eslint-config": "workspace:*",
    "@infocus/jest-config": "workspace:*",
    "@infocus/prettier-config": "workspace:*",
    "@infocus/tsconfig": "workspace:*",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.1",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.46",
    "babel-jest": "^29.7.0",
    "detox": "^20.14.8",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.3.3"
  }
}
