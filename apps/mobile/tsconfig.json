{
  "extends": "../../packages/tsconfig/react-native.json",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@infocus/shared": [
        "../../packages/shared/src"
      ]
    }
  },
  "include": [
    "src/**/*",
    "*.ts",
    "*.tsx",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "android",
    "ios",
    ".expo"
  ]
}
