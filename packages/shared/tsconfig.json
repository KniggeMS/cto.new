{
  "extends": "@infocus/tsconfig/node",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2020", "dom"],
    "types": ["jest"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/components/**",
    "src/__test-exports__.ts"
  ]
}
